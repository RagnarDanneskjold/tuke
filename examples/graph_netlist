"""
Generates a Netlist graph using pydot

Usage:

graph_netlist < foo.xml > foo.jpg
"""

from Tuke import Id,rndId,load_element_from_file
from Tuke.sch import Pin
import sys


sch = load_element_from_file(sys.stdin)


def graph_sch(elem,base = Id()):
    """Recursive grapher
    
    elem - element
    base - Id prefix
    """

    pins = []
    subs = []
    for e in elem.subs:
        if isinstance(e,Pin):
            pins.append(e)
        else:
            subs.append(e)

    print [p.id for p in pins]

    for s in subs:
        graph_sch(s,base + s.id)

# Walk down sch, building the graph as we go
graph_sch(sch)
